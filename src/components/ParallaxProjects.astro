<section class="container-small">
  <div class="parallax-projects">
    <h2 class="smaller-h1">Selected <br /> projects</h2>

    <div class="parallaxDemerde parallax">
      <div class="img-1 cadre" data-speed="0.50">
        <a href="">
          <div class="img-container">
            <img src="/images/oneul-mockup.png" alt="" />
            <button>See more</button>
          </div>
          <div class="project-infos">
            <p class="title">ONEUL ZINE (2022)</p>
            <p class="view">view project</p>
          </div>
        </a>
      </div>
      <div class="img-2 cadre" data-speed="0.15">
        <a href="">
          <div class="img-container">
            <img src="/images/oneul-mockup-2.png" alt="" />
            <button>See more</button>
          </div>
          <div class="project-infos">
            <p class="title">MUSEUM (2022)</p>
            <p class="view">view project</p>
          </div>
        </a>
      </div>
      <div class="img-3 cadre" data-speed="0.40">
        <a href="">
          <div class="img-container">
            <img src="/images/oneul-mockup-3.png" alt="" />
            <button>See more</button>
          </div>
          <div class="project-infos">
            <p class="title">YEDUS (2022)</p>
            <p class="view">view project</p>
          </div>
        </a>
