---
interface Props {
  imgs: {
    src: string;
    alt?: string;
  }[];
}
const { imgs } = Astro.props;
---

<section class="container-small">
  <div class="grid">
    {
      imgs.map((img) => (
        <div class="imgContainer" is-inview="fromLowB">
          <img src={img.src} alt={img.alt} srcset="" />
        </div>
      ))
    }
  </div>
</section>

<style lang="scss">
  @import "../stylesheet/main.scss";

  .container-small {
    padding-top: 6rem;

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: flex-start;
      column-gap: 2rem;
      @media (max-width: $to_small) {
        grid-template-columns: 1fr;
      }
      .imgContainer {
        width: 80%;
        max-width: 600px;
        margin: 0 auto;
        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
      }
    }
  }
</style>
