---
interface Props {
  data: {
    imgUrl: string;
    name: string;
    link: string;
  }[];
}
const { data } = Astro.props;
---

<div class="container">
  <div class="projects">
    {
      data.map((singleData) => {
        const { imgUrl, name, link } = singleData;

        return (
          <div class="img-3 cadre">
            <a href="">
              <div class="img-container">
                <img src={imgUrl} alt="" />
                <button>See more</button>
              </div>
              <div class="project-infos">
                <p class="title">{name}</p>
                <p class="view">view project</p>
              </div>
            </a>
          </div>
        );
      })
    }
  </div>
</div>

<style lang="scss">
  @import "../stylesheet/main.scss";

  .projects {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 1rem;
    row-gap: 1rem;
    @media (max-width: $to_medium) {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .cadre {
    img {
      transition: filter 0.4s;
    }
    .img-container {
      overflow: hidden;
      position: relative;
      aspect-ratio: 1/1.3;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      button {
        opacity: 0;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        transition: opacity 0.4s;
        padding: 0.8rem 2rem;
        border-radius: 200px;
        background-color: $color_dark;
        color: $color_background;
        border: 1px solid $color_background;
        cursor: pointer;
      }
    }
    &:hover .img-container {
      button {
        opacity: 1;
      }
    }
    &:hover img {
      filter: blur(4px);
    }
    .project-infos {
      display: flex;
      justify-content: space-between;
      text-transform: uppercase;
      padding-top: 0.6rem;
      p {
        white-space: nowrap;
      }
      .title {
        font-family: $font_title;
      }
      & :last-child {
        @media (max-width: $to_small) {
          display: none;
        }
      }
    }
  }
</style>
