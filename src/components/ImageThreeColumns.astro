---
interface Props {
  bigGap?: boolean;
  imgs: {
    src: string;
    alt?: string;
  }[];
}
const { imgs, bigGap } = Astro.props;
---

<section class="container-small">
  <div class={`grid ${bigGap ? "bigGap" : ""}`}>
    {
      imgs.map((img) => (
        <div class="imgContainer">
          <img src={img.src} alt={img.alt} srcset="" is-inview="fromLowB" />
        </div>
      ))
    }
  </div>
</section>

<style lang="scss">
  @import "../stylesheet/main.scss";

  .container-small {
    padding-top: 6rem;

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      column-gap: 2rem;
      row-gap: 1rem;
      &.bigGap {
        column-gap: 1rem;
        row-gap: 3rem;
      }
      @media (max-width: $to_medium) {
        grid-template-columns: 1fr 1fr;
      }
      @media (max-width: $to_tiny) {
        grid-template-columns: 1fr;
      }
      .imgContainer {
        width: 80%;
        max-width: 600px;
        margin: 0 auto;
        height: fit-content;

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
      }
    }
  }
</style>
