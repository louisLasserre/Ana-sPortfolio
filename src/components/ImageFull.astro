---
interface Props {
  image: {
    src: string;
    alt?: string;
  };
}
const { image } = Astro.props;
---

<div class="imageContainer">
  <img src={image.src} alt={image.alt ? image.alt : ""} srcset="" />
</div>

<style lang="scss">
  @import "../stylesheet/main.scss";

  .imageContainer {
    margin-top: 8rem;
    height: 90vh;
    overflow: hidden;
    width: 100%;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
