---
interface Props {
  image: {
    src: string;
    alt?: string;
  };
  h?: number;
}
const { image, h = 90 } = Astro.props;

const height = `${h}vh`;
---

<div class="imageContainer">
  <img src={image.src} alt={image.alt ? image.alt : ""} srcset="" />
</div>

<style lang="scss" define:vars={{ height }}>
  @import "../stylesheet/main.scss";

  .imageContainer {
    margin-top: 8rem;
    height: var(--height);
    overflow: hidden;
    width: 100%;
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
