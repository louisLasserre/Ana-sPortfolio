---
import ButtonOutline from "./ButtonOutline.astro";

import AdobeIllustrate from "@assets/icons/Adobe-indesign.svg";
import AdobeInDesign from "@assets/icons/Adobe-illustrate.svg";
import AdobePhotoshop from "@assets/icons/Adobe-photoshop.svg";
import AfterEffects from "@assets/icons/AfterEffetcs.svg";
import Figma from "@assets/icons/Figma.svg";
import PremierePro from "@assets/icons/PremierePro.svg";
---

<div class="container-small">
  <div class="grid">
    <article>
      <h2>My skills</h2>
      <ul>
        <li>ART DIRECTION</li>
        <li>UI-IX DESIGN</li>
        <li>BRANDING</li>
        <li>EDITORIAL</li>
        <li>PACKAGING</li>
      </ul>
    </article>
    <div class="images">
      <div class="imgContainer"><img src="/images/ordis.png" alt="" /></div>
      <div class="imgContainer"><img src="/images/livres.png" alt="" /></div>
    </div>

    <div class="buttonContainer">
      <ButtonOutline>Discover my work</ButtonOutline>
    </div>

    <div class="icons">
      <img src={AdobeIllustrate} alt="" />
      <img src={AdobeInDesign} alt="" />
      <img src={AdobePhotoshop} alt="" />
      <img src={AfterEffects} alt="" />
      <img src={Figma} alt="" />
      <img src={PremierePro} alt="" />
    </div>
  </div>
</div>

<style lang="scss">
  @import "../stylesheet/main.scss";

  .container-small {
    h2 {
      text-transform: uppercase;
      font-family: $font_medium;
    }
    .grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto auto auto;

      row-gap: 3rem;

      article {
        grid-row: 1/3;
        grid-column: 1/2;

        @media (max-width: $to_small) {
          grid-row: 1;
        }
        ul {
          margin-top: 4rem;
        }
      }
      .images {
        grid-row: 1/3;
        grid-column: 2/4;
        display: flex;
        justify-content: space-between;
        .imgContainer {
          width: 45%;
          height: 100%;
        }
        @media (max-width: $to_small) {
          grid-row: 2;
          grid-column: 1/4;

          width: 100%;
        }
        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
      .buttonContainer {
        grid-row: 3;
        grid-column: 1;
        display: flex;
        align-items: center;
      }
      .icons {
        display: flex;
        justify-content: space-between;
        align-items: center;
        grid-column: 2/4;
        grid-row: 3;
        @media (max-width: $to_small) {
          grid-row: 4;
          grid-column: 1/4;
          img {
            height: 60%;
          }
        }
      }
    }
  }
</style>
