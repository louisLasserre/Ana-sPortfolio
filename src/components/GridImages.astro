---
interface Props {
  images: string[];
}

const { images, columns = 3 } = Astro.props;
---

<section class="container-small">
  <div class="grid" style=`grid-template-columns: repeat(${columns}, 1fr);`>
    {
      images.map((imgUrl) => (
        <div class="imgContainer">
          <img src={imgUrl} />
        </div>
      ))
    }
  </div>
</section>

<style lang="scss">
  @import "../stylesheet/main.scss";

  .container-small {
    margin-top: 6rem;
    .grid {
      display: grid;
      column-gap: 1rem;
      row-gap: 1rem;
      .imgContainer {
        width: 100%;
        aspect-ratio: 16/9;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
    }
  }
</style>
